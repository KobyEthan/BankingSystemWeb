        <servlet-name>EditCustomersServlet</servlet-name>
        <url-pattern>/editCustomers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAccountsServlet</servlet-name>
        <url-pattern>/editAccounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageTransactionsServlet</servlet-name>
        <url-pattern>/manageTransactions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserRolesServlet</servlet-name>
        <url-pattern>/editUserRoles</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
