<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAccountsServlet</servlet-name>
        <servlet-class>servlets.DisplayAccountsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayTransactionsServlet</servlet-name>
        <servlet-class>servlets.DisplayTransactionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferFundsServlet</servlet-name>
        <servlet-class>servlets.TransferFundsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageCustomers</servlet-name>
        <servlet-class>servlets.ManageCustomersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageAccountsServlet</servlet-name>
        <servlet-class>servlets.ManageAccountsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUserRolesServlet</servlet-name>
        <servlet-class>servlets.ManageUserRolesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditCustomersServlet</servlet-name>
        <servlet-class>servlets.EditCustomersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAccountsServlet</servlet-name>
        <servlet-class>servlets.EditAccountsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageTransactionsServlet</servlet-name>
        <servlet-class>servlets.ManageTransactionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserRolesServlet</servlet-name>
        <servlet-class>servlets.EditUserRolesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayAccountsServlet</servlet-name>
        <url-pattern>/displayAccounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayTransactionsServlet</servlet-name>
        <url-pattern>/displayTransactions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferFundsServlet</servlet-name>
        <url-pattern>/transferFunds</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageCustomers</servlet-name>
        <url-pattern>/manageCustomers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageAccountsServlet</servlet-name>
        <url-pattern>/manageAccounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageUserRolesServlet</servlet-name>
        <url-pattern>/manageUserRoles</url-pattern>
    </servlet-mapping>
